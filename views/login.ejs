<form method="post">

	<fieldset>
		<legend>登入</legend>
		<div class="form-group row">
			<label for="username" class="col-sm-6 col-md-3 form-control-label" style="text-align:right;">
				用户名
			</label>
			<div class="col-sm-6 col-md-3">
				<input type="text" class="form-control" name="username" id="username" required>
			</div>
		</div>
		<div class="form-group row">
			<label for="password" class="col-sm-6 col-md-3 form-control-label" style="text-align:right;">
				密码
			</label>
			<div class="col-sm-6 col-md-3">
				<input type="password" class="form-control" name="password" id="password" required>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-6 col-md-3 col-sm-offset-6 col-md-offset-3">
				<button type="submit" value="" class="btn btn-primary-outline">登入</button>
			</div>
		</div>
	</fieldset>
</form>